<metal:block use-macro="main_template">

    <div metal:fill-slot="content" class="span12">

        <h1>${title}</h1>
        <p id="filler">Content here.</p>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="i items">
                <td>${i.title}</td>
                <td>${i.author}</td>
            </tr>
            </tbody>
        </table>

    </div>

</metal:block>
